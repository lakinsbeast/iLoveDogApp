<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.ILoveDog" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/background_color</item>
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:navigationBarColor">@color/background_color</item>
    </style>

    <style name="light_dialog_theme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">#373635</item>                   <!--header background-->
        <item name="android:windowBackground">#1C1C1C</item>     <!--calendar background-->
        <item name="android:colorControlActivated">#DB8A74</item> <!--selected day-->
        <item name="android:textColorPrimary">#FFFFFF</item> <!--days of the month-->
        <item name="android:textColorSecondary">#FFFFFF</item>    <!--days of the week-->
        <item name="android:buttonBarPositiveButtonStyle">
            @style/TimePickerDialogLightPositiveButtonStyle
        </item>
        <item name="android:buttonBarNegativeButtonStyle">
            @style/TimePickerDialogLightNegativeButtonStyle
        </item>
        <item name="android:buttonBarNeutralButtonStyle">
            @style/TimePickerDialogLightNeutralButtonStyle
        </item>
    </style>

    <style name="TimePickerDialogLightNegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TimePickerDialogLightPositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TimePickerDialogLightNeutralButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>